<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    <TextView
    	android:id="@+id/available_updates_text"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/available_updates_text"
		android:gravity="center_horizontal"
		android:layout_marginTop="10sp"
    	style="@style/TextAppearance.Text" />
		
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15sp"
		android:layout_marginBottom="15sp">
		<Spinner
			android:id="@+id/available_updates_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10sp"
			android:layout_gravity="center_horizontal">
		</Spinner>
	</ScrollView>
		
    <Button
    	android:id="@+id/download_update_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/choose_available_update_text"
	    style="@style/TextAppearance.Button"
	    android:drawableLeft="@drawable/download" />
	    
	<TextView
    	android:id="@+id/check_now_update_chooser_text"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/check_now_update_chooser"
		android:gravity="center_horizontal"
		android:layout_marginTop="10sp"
    	style="@style/TextAppearance.Text" />
	    
	<Button
	    android:id="@+id/check_now_button_update_chooser"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/check_now_button_text"
		android:layout_weight="0"
		android:layout_marginTop="20sp"
	    style="@style/TextAppearance.Button"
	    android:drawableLeft="@drawable/check_now"/>
	    
	<View
		android:id="@+id/downloaded_update_found_separator"
		android:layout_marginTop="20px"
		android:layout_marginBottom="20px"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#FFFFFFFF" />
		
	<TextView
		android:id="@+id/downloaded_update_found"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/downloaded_update_found_text"
		android:layout_marginBottom="10px"
    	style="@style/TextAppearance.Text" />

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15sp"
		android:layout_marginBottom="15sp">
		<Spinner
			android:id="@+id/found_updates_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10sp"
			android:layout_gravity="center_horizontal">
		</Spinner>
	</ScrollView>

	<Button
    	android:id="@+id/apply_update_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/apply_update_button_text"
	    android:drawableLeft="@drawable/verify_and_apply"
	    style="@style/TextAppearance.Button" />
	
	<Button
    	android:id="@+id/delete_updates_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/delete_updates_text"
	    style="@style/TextAppearance.Button"
	    android:drawableLeft="@drawable/check_now" />

	<TextView
    	android:id="@+id/experimental_updates_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px"
		android:layout_marginRight="10px"
		android:layout_gravity="bottom|right" />

	<TextView
    	android:id="@+id/show_downgrades_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px"
		android:layout_marginRight="10px"
		android:layout_gravity="bottom|right" />

	<TextView
    	android:id="@+id/up_chooser_current_version"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px"
		android:layout_marginRight="10px"
		android:layout_gravity="bottom|right" />

</LinearLayout>
</ScrollView>